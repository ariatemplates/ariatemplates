{Library {
	$classpath : "test.aria.templates.section.asContainer.TestMacro",
	$hasScript : true
}}

	{macro justAMacro(arg)}
		{var firstVar = "macrolibvar"/}
		{section {id:"a"}}
			<div id="macroDiv1">${arg}</div>
			<div id="macroDiv2">${firstVar}</div>
			<div id="macroDiv3">${getValue()}</div>
			{section {id:"b"}}
				<div id="macroDiv4">${arg}</div>
				<div id="macroDiv5">${firstVar}</div>
				<div id="macroDiv6">${getValue()}</div>
				{@aria:Button {
					id : "buttonTwo",
					label : "click me",
					onclick : {fn : updateValue, args : this}

				}/}
				{section "c"}
					<div id="macroDiv7">${arg}</div>
					<div id="macroDiv8">${firstVar}</div>
					<div id="macroDiv9">${getValue()}</div>
				{/section}
			{/section}
		{/section}
	{/macro}

{/Library}